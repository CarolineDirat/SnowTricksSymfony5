{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    <section class="container">
        <div id="reset-password-request" class="row justify-content-center">
            
            <h1 class="mt-3 mt-md-5 font-weight-normal col-12 text-center">Mot de passe oublié ...</h1>
            <div class="col-12 text-center">
                <small>
                    Entrez votre adresse mail et nous vous enverrons 
                    un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger mt-4" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_start(requestForm, {'attr': {'class': 'mt-4 text-center'}}) }}
                {{ form_row(requestForm.email) }}
                <button class="btn btn-primary mt-3 mx-4">Demande de réinitialisation de mot de passe</button>
            {{ form_end(requestForm) }}
        </div>
    </section>
{% endblock %}
