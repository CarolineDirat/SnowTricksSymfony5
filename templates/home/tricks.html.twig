{% extends 'base.html.twig' %}

{% block title %}
    Liste des tricks
{% endblock %}

{% block body %}
    <section id="tricks-page" class="container-fluid">
        <h1 class="d-flex justify-content-center"> Les Tricks </h2>
        {% if app.user %}
            {% if not is_granted('ROLE_VERIFY') %}
                <div class="row justify-content-center">
                    <div class="alert alert-primary my-2 font-weight-bold">
                        Attention {{ app.user.username }} ! Votre compte n'est pas encore activé. 
                        Pour activer votre compte, veuillez cliquer sur le lien dans le mail de confirmation que nous vous avons envoyé.
                    </div>
                </div>
            {% endif %}
        {% endif %}
        {{ include('fragments/_flashes.html.twig') }}
        {{ include('fragments/_tricks.html.twig') }}
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/tricks.js') }}"></script>
	<script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
