{% extends 'base.html.twig' %}

{% block title %}
    Liste des tricks
{% endblock %}

{% block body %}
    <section id="tricks-page" class="container-fluid">
        <h1 class="d-flex justify-content-center"> Les Tricks </h2>
        {% for message in app.flashes('notice') %}
        <div class="row justify-content-center">
            <div class="alert alert-primary my-4 font-weight-bold col-11 col-sm-11 col-md-8 col-xl-4 text-center">
                {{ message }}
            </div>
        </div>
        {% endfor %}
        {% for message in app.flashes('upload') %}
            <div class="alert alert-warning my-4 font-weight-bold row text-center">
                {{ message }} Vous pouvez r√©essayer avec un autre fichier.
            </div>
        {% endfor %}
        {{ include('fragments/_tricks.html.twig') }}
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/tricks.js') }}"></script>
	<script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
