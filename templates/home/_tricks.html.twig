<div id="tricks" class="row d-none" data-token="{{ csrf_token('delete-trick-token258941367') }}">
	{% for trick in tricks %}
		<div class="col-sm-6 col-md-4 col-lg-3 my-2">
			<div class="card tricks">
				<div class="div-card-img d-flex align-items-center justify-content-center">
					<img 
						src="{{ asset('uploads/images/200/' ~ (trick.firstPicture ? trick.firstPicture.filename : (trick.pictures ? trick.pictures[0].filename : 'default.jpg'))) }}" 
						class="card-img-top"
						alt="Picture to illustrate {{ trick.name }} snowboard trick.">
				</div>
				<div class="card-body p-0">
					<h2 class="card-title d-flex flex-nowrap justify-content-center">
						<a href="{{ path('display_trick', {uuid: trick.uuid, slug: trick.slug}) }}" class="btn btn-outline-primary btn-sm text-nowrap mr-2">
							{{ trick.name|upper }}
						</a>
						{% if app.user %}
						<a href="#" class="btn btn-outline-primary btn-sm mr-1 ml-2">
							<i class="fas fa-pencil-alt"></i>
						</a>
						<a role="button" href="{{ path('trick_delete', {uuid: trick.uuid}) }}" class="btn btn-outline-primary btn-sm" data-delete data-trick="{{ trick.name }}" data-toggle="modal" data-target="#modalDelete">
							<i class="fas fa-trash-alt"></i>
						</a>
						{% endif %}
					</h2>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
{# Modal page before trick deletion #}
<div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="modalDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalDeleteLabel">Attention ! Cette action est d√©finitive !</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {# ask confirmation to delete the trick {{ trick name define by JS code }} #}
      </div>
      <div class="modal-footer">
        <button id="cancelDeleteTrickModal" type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        <button id="confirmDeleteTrickModal" type="button" class="btn btn-primary">Supprimer</button>
      </div>
    </div>
  </div>
</div>
{# Modal page to display deletion response #}
<div class="modal fade" id="modalResponseFromDelete" tabindex="-1" aria-labelledby="modalResponseLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
	  	<p class="modal-title" id="modalDeleteLabel">{# response #}</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
{# buttons : load more, add a trick and scroll to tricks top #}
<div class="row">
	<div class="col-12 text-center mt-4">
		<a id="load-more-tricks" role="button" href="{{ path('load-more-tricks') }}" class="btn btn-primary mb-3 d-none">
			Voir plus de tricks
		</a>
	</div>
	{% if app.user %}
	<div class="col-12 text-center mb-5">
		<a href="#" class="btn btn-secondary mb-4 add-trick-btn d-none">
			Ajouter un trick
		</a>
	</div>
	{% endif %}
</div>

<div class="row">
	<div id="tricks-up" class="col-sm-12 d-none text-right sticky-bottom">
		<a>
			<i class="fas fa-arrow-circle-up "></i>
		</a>
	</div>
</div>
