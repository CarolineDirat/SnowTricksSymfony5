<div id="tricks" class="row d-none">
	{% if app.user %}
		<div class="col-12 text-center my-4">
			<a href="#" class="btn btn-secondary btn-lg add-trick-btn"> Ajouter un trick </a>
		</div>
	{% endif %}
	{% for trick in tricks %}
		<div class="col-sm-6 col-md-4 col-lg-3 my-2">
			<div class="card tricks">
				<div class="div-card-img d-flex align-items-center justify-content-center">
					<img 
						src="{{ asset('uploads/images/200/' ~ (trick.firstPicture ? trick.firstPicture.filename : (trick.pictures ? trick.pictures[0].filename : 'default.jpg'))) }}" 
						class="card-img-top"
						alt="Picture to illustrate {{ trick.name }} snowboard trick.">
				</div>
				<div class="card-body p-0">
					<h2 class="card-title d-flex flex-nowrap justify-content-center">
						<a href="{{ path('display_trick', {uuid: trick.uuid, slug: trick.slug}) }}" class="btn btn-outline-primary btn-sm text-nowrap mr-2">
							{{ trick.name|upper }}
						</a>
						{% if app.user %}
							<a href="#" class="btn btn-outline-primary btn-sm mr-1 ml-2">
								<i class="fas fa-pencil-alt"></i>
							</a>
							<a href="#" class="btn btn-outline-primary btn-sm">
								<i class="fas fa-trash-alt"></i>
							</a>
						{% endif %}
					</h2>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
<div class="row">
	<div class="col-12 text-center mb-5">
		<a id="load-more-tricks" role="button" href="{{ path('load-more-tricks') }}" class="btn btn-primary mt-4 d-none">Voir plus de tricks</a>
		{% if app.user %}
			<a id="add-trick-btn" href="#" class="btn btn-secondary mt-4 add-trick-btn d-none"> Ajouter un trick </a>
		{% endif %}
	</div>
</div>

<div class="row">
	<div id="tricks-up" class="col-sm-12 d-none text-right sticky-bottom">
		<a>
			<i class="fas fa-arrow-circle-up "></i>
		</a>
	</div>
</div>
