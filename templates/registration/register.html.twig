{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section id="register" class="container">

        <div  class="row justify-content-center">
            <h1 class="mt-4 mt-sm-5">S'inscrire</h1>
        </div>

		<div  class="row justify-content-center mt-2">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        </div>

        <div  class="row justify-content-center mt-4">
            {{ form_start(registrationForm, {'attr': {'class': 'text-center'}}) }}
                {{ form_row(registrationForm.username, {'label': 'Nom d\'utilisateur :'}) }}
                {{ form_row(registrationForm.email) }}
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_help(registrationForm.plainPassword) }}
                <button type="submit" class="btn btn-primary mt-4">Créer mon compte</button>
            {{ form_end(registrationForm) }}
        </div>

        <div class="row justify-content-center mt-4">
            <a href="{{ path('app_login') }}" class="text-center">Déja un compte ?</a>
        </div>

    </section>
{% endblock %}
